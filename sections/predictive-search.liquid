<style>
  /* Desktop View */
.text-suggestions-box {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 20px;
}

.text-dropdown {
  max-height: 300px; /* Adjust height as needed */
  overflow-y: auto;
}

.text-suggestions-heading {
  font-size: 18px;
  margin-bottom: 10px;
}

/* Mobile View */
@media (max-width: 767px) {
  .text-dropdown {
    margin-top: 20px;
  }
}

</style>
{%- if predictive_search.performed -%}
  <div id="predictive-search-results" class="quickSearchResults quickSearchResultsBlock custom-scrollbar">
    <div class="container">
      <div class="row">
        <!-- Desktop View -->
        <div class="col-md-6 d-none d-md-block">
          <!-- Text Suggestions Box -->
          <div class="text-suggestions-box">
            <h2 class="text-suggestions-heading">{{ 'general.search.suggestions_title' | t }}</h2>
            <div class="text-dropdown">
              <ul id="search-dropdown">
                {% for product in predictive_search.resources.products %}
                  <li>{{ product.title }}</li>
                {% endfor %}
                {% for hashtag in hashtags %}
                  <li>{{ hashtag }}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <!-- Products Display -->
          <div id="predictive-search-products" class="predictive-search__results-list">
            {%- if predictive_search.resources.products.size > 0 -%}
              <div class="products-grid column-{{ settings.search_product_per_row }} disable-srollbar text-left">
                {%- for product in predictive_search.resources.products -%}
                  <div class="product">
                    {% render 'product-grid-layout',
                      product_card_product: product,
                      portrait_aspect_ratio: '125',
                      serial: forloop.index,
                      sectionId: sectionId,
                      media_size: image_ratio,
                      hasCountdown: hasCountdown,
                      loading: true
                    %}
                  </div>
                {%- endfor -%}
              </div>
              <div class="predictive-search__loading-state" aria-hidden="true">
                <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                  <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                </svg>
              </div>
            {%- else -%}
              <div class="productEmpty text-center animate-arrow">
                <a class="icon-arrow search-more" href="{{ routes.search_url }}?q={{ predictive_search.terms }}&type=product">
                  <span class="text">{{- 'general.search.search_no_result' | t }} <strong>"{{ predictive_search.terms }}"</strong></span>
                  {% render 'icon-link-arrow-right' %}
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
    <!-- Mobile View -->
    <div class="text-dropdown d-block d-md-none">
      <ul id="search-dropdown">
        {% for product in predictive_search.resources.products %}
          <li>{{ product.title }}</li>
        {% endfor %}
        {% for hashtag in hashtags %}
          <li>{{ hashtag }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
{%- endif -%}
